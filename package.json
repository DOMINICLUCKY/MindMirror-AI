{
  "name": "mindmirror-ai-root",
  "version": "1.0.0",
  "description": "MindMirror AI - Run both frontend and backend",
  "scripts": {
    "install-all": "npm --prefix ./backend install && npm --prefix ./frontend install",
    "start": "concurrently \"npm --prefix ./backend start\" \"npm --prefix ./frontend start\"",
    "backend": "npm --prefix ./backend start",
    "frontend": "npm --prefix ./frontend start",
    "dev": "npm run install-all && npm start"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}
